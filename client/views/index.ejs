<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- static assets utilized from static mid -->
    <link rel="stylesheet" href="/game.css" />
    <title>Raining Dildos App</title>
  </head>
  <body>
    <!-- level indicator in background -->
    <h1 id="level" class="no-pointer"></h1>
    <!-- dildos fall from spaceship's exit holes -->
    <!-- spaceship container (top screen) -->
    <div
      id="spaceship-container"
      class="ship-container container-ship container-spaceship spaceship-container-class bye-spaceship"
    >
      <!-- flexible holes container - ul -->
      <ul
        id="holes-container"
        class="container-holes hole-container hole-ul ul-hole"
      >
        <!-- actial holes - list-items -->
        <li class="holes item list-item">
          <div class="circle circle-hole hole-circle"></div>
        </li>
        <li class="holes item list-item">
          <div class="circle circle-hole hole-circle"></div>
        </li>
        <li class="holes item list-item">
          <div class="circle circle-hole hole-circle"></div>
        </li>
      </ul>
    </div>
    <!-- start button -->
    <button id="start-btn" class="appear">Start</button>
    <!-- warning -->
    <hr id="warning" />
    <% if(isAuthenticated){%>
    <section id="scoreboard-container">
      <ul class="scoreboard-list-container">
        <li class="scoreboard-list-item">
          <h3>Top Score</h3>
          <div>0</div>
        </li>
        <li class="scoreboard-list-item">
          <h3>current</h3>
          <div>0</div>
        </li>
        <li class="scoreboard-list-item">
          <h3>Attempts</h3>
          <div>0</div>
        </li>
        <li class="scoreboard-list-item">
          <h3>Average</h3>
          <div>0</div>
        </li>
        <li class="scoreboard-list-item">
          <h3>Lead</h3>
          <div>0</div>
        </li>
      </ul>
    </section>
    <% } %>
  </body>
  <script type="module" src="/main.js"></script>
</html>
